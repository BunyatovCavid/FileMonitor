<Window x:Class="FileMonitor.InputDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileMonitor"
        mc:Ignorable="d"
        Title="InputDataWindow" Height="470" Width="800" Padding="10">
    <StackPanel>
        <TextBox Name="inputnm" Height="370" TextWrapping="Wrap"
           AcceptsReturn="True"
           VerticalScrollBarVisibility="Visible"/>
        <DockPanel>
            <TextBox Name="filenameinput" Width="650" Height="40" FontSize="23" FontFamily="Arial Black"/>
            <Button Name="inputsave" Content="Save" FontSize="20" FontFamily="Arial Black" Width="150" Height="40" Margin="10" Click="inputsave_Click" HorizontalAlignment="Right"/>
        </DockPanel>
        </StackPanel>
</Window>
