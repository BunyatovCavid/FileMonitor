<Window x:Class="FileMonitor.Choose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileMonitor"
        mc:Ignorable="d"
        Title="Choose" Height="100" Width="200" Padding="10">
    <StackPanel>
        <Button x:Name="Selectbtn" Content="Select" Height="40" Width="150" Margin="10" Click="Selectbtn_Click"/>
    </StackPanel>
</Window>
