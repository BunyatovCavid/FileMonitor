<Window x:Class="FileMonitor.Choose"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileMonitor"
        mc:Ignorable="d"
        Title="Choose" Height="170" Width="200
        ">
    <StackPanel>
        <Button x:Name="xmlTypenm" Content="Xml" Margin="10" Click="xmlTypenm_Click"/>
        <Button x:Name="csvTypenm" Content="Csv" Margin="10" Click="csvTypenm_Click"/>
        <Button x:Name="txtTypenm" Content="Txt" Margin="10" Click="txtTypenm_Click"/>

    </StackPanel>
</Window>
